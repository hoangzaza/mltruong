<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorWhite"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView

        android:id="@+id/icon_user"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/size_10dp"
        android:src="@drawable/unknown_user" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/icon_user"
        android:text="@string/sap_xep_do"
        android:textColor="@color/maudo"
        android:textSize="@dimen/size_20sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true">

        <ImageView
            android:id="@+id/icon_clock"
            android:layout_width="@dimen/size_20sp"
            android:layout_height="@dimen/size_20sp"
            android:layout_marginRight="@dimen/size_10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_clock" />

        <TextView
            android:id="@+id/tvTimeago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/icon_clock"
            android:text="1 tháng trước"
            android:layout_marginRight="@dimen/size_10dp"
            android:textSize="15sp" />


    </RelativeLayout>

</RelativeLayout>